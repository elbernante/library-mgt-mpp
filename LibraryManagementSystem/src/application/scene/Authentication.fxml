<?xml version="1.0" encoding="UTF-8"?>


<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111" fx:id="authenticationForm"
			fx:controller="application.controller.AuthenticationController">
	<center>
		<Pane prefHeight="300.0" prefWidth="300.0" BorderPane.alignment="CENTER">
			<children>
				<JFXTextField fx:id="username" labelFloat="true" layoutX="14.0" layoutY="49.0" prefWidth="272.0"
							  promptText="User name">
					<font>
						<Font size="18.0"/>
					</font>
				</JFXTextField>
				<JFXPasswordField fx:id="password" labelFloat="true" layoutX="14.0" layoutY="151.0" prefWidth="272.0"
								  promptText="Password">
					<font>
						<Font size="18.0"/>
					</font>
				</JFXPasswordField>
				<JFXButton fx:id="signInButton" alignment="BOTTOM_CENTER" buttonType="RAISED" layoutX="14.0"
						   layoutY="241.0" onAction="#signIn" prefHeight="45.0" prefWidth="272.0" ripplerFill="BLACK"
						   text="Sign In">
					<font>
						<Font size="24.0"/>
					</font>
				</JFXButton>
			</children>
		</Pane>
	</center>
</BorderPane>
